<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/reset_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="600sp"
        android:text="CLEAR CAPTURES" />

    <Button
        android:id="@+id/start_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100sp"
        android:text="START" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50sp"
        android:text="STOP" />

    <Button
        android:id="@+id/set_btn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="225sp"
        android:text="SET" />

    <TextView
        android:id="@+id/interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="175sp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="Current Interval: 0 seconds" />



    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/setInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="275sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textSize="16sp"
        android:focusable="false"
        android:ems="10"
        android:inputType="number"
        app:backgroundTint="@color/white"
        android:hint="Set Interval (in seconds)"
        android:textColorHint="#808080"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="375sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="20sp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:text="Select Memory Capture Mode:" />


    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:layout_marginBottom="20sp"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:text="Without Interval (capture once)" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="15sp"
        android:textColor="@color/white"
        app:buttonTint="@color/white"
        android:text="With Interval (continuous capture)" />
    </RadioGroup>


</RelativeLayout>